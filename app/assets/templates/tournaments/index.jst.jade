.row
  .col-xs-12
    .page-header
      h1 My Tournaments 
        small
          a(href='#', id='tourney_add') Add New

.row
  .col-sm-12
    form#new_tourney.hidden.form-inline(role="form")
      .form-group
        input#new_tourney_tournament.form-control(type='text', name='tournament', placeholder='Tournament Name', required=true)

      .form-group
        input#new_tourney_school.form-control(type='text', name='school', placeholder='School, optional')

      .form-group
        input#new_tourney_date.form-control(type='date', name='date', required=true, placeholder='YYYY-MM-DD')

      input.btn.btn-default(type='submit', value="Add")

.row
  .col-xs-12.col-md-7
    #tournaments

  .col-xs-12.col-md-4.col-md-offset-1
    aside
      h3 Recent Rounds

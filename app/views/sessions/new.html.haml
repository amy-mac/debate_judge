%div#main
  .container
    .row
      .col-xs-12
        .page-header
          %h1 Sign In

    .row
      .col-xs-12.col-md-6
        = form_tag("/sessions", method: "post", id: "new_session") do
          .form-group
            %label{for: "email"} Email
            %input#new_session_email.form-control{type: "email", name: "email", autofocus: "true", required: "true", placeholder: "Email Address"}

          .form-group
            %label{for: "password"} Password
            %input#new_session_pass.form-control{type: "password", name: "password", required: true, placeholder: "Password"}

          .checkbox
            %label{for: "remember_me"} Remember me
            %input{type: "checkbox", name: "remember_me"}

          %hr

          %button.btn.btn-default{type: "button"} Cancel
          %button.btn.btn-primary{type: "submit"} Sign In

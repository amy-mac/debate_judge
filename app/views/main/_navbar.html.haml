.navbar.navbar-default.navbar-static-top#navbar{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to("Arbitr", root_path, {class: "navbar-brand"})
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        // %li
        //  %a{href: "#about"} About
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
              %span.glyphicon.glyphicon-user
              Account
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to("My Tournaments", tournament_path)
              %li
                = link_to("Edit Account", edit_user_path(current_user))
              %li.divider
              %li
                = link_to("Sign Out", destroy_session_path)
        - else
          %li
            = link_to("Sign Up", new_user_path)
          %li
            = link_to("Sign In", login_path)
